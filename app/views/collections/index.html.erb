<div class="container">
  <h1>Collections</h1>

  <% @collections.each do |collection| %>
      <%= link_to collection_path(collection), class: "text-decoration-none" do %>
        <div class="card mb-5">
          <%= image_tag(collection.images.first&.file_url, class: "card-img-top") %>
          <h2 class="card-text"><%= collection.title %></h2>
          <div class="card-body  d-flex justify-content-center align-items-center">
            <button type="button " class="btn btn-outline-secondary">See more</button>
          </div>
        </div>
      <% end %>  
  <% end %>
</div>
